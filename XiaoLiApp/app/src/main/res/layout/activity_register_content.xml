<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
		>

	<RelativeLayout
			android:layout_below="@id/base_block_top"
			android:id="@+id/login_block_phone"
			android:layout_marginTop="30dp"
			android:layout_marginLeft="20dp"
			android:layout_marginRight="30dp"
			android:layout_marginBottom="5dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			>

		<TextView
				android:id="@+id/login_text1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="手机号"
				android:layout_centerVertical="true"
				/>

		<EditText
				android:id="@+id/login_phone_number"
				android:layout_width="match_parent"
				android:layout_height="40dp"
				android:layout_toRightOf="@id/login_text1"
				android:hint="请输入所注册的手机号"
				android:textSize="12sp"
				android:background="@drawable/shape_radius_back_edittext"
				android:layout_marginLeft="25dp"
				/>
	</RelativeLayout>

	<TextView
			android:id="@+id/login_get_pincode"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="获取验证码"
			android:textSize="12sp"
			android:textColor="#ff76a1d3"
			android:layout_marginLeft="65dp"
			android:onClick="onClick"
			android:layout_below="@+id/login_block_phone"
			android:layout_alignLeft="@+id/login_block_phone"
			/>

	<RelativeLayout
			android:layout_below="@id/login_get_pincode"
			android:id="@+id/login_block_psw"
			android:layout_marginLeft="20dp"
			android:layout_marginRight="30dp"
			android:layout_marginTop="20dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			>

		<TextView
				android:id="@+id/login_text2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="密码"
				android:layout_centerVertical="true"
				/>

		<EditText
				android:id="@+id/login_password"
				android:layout_toRightOf="@id/login_text2"
				android:layout_marginLeft="38dp"
				android:layout_width="match_parent"
				android:layout_height="40dp"
				android:hint="请输入6-12位密码"
				android:inputType="textPassword"
				android:textSize="12sp"
				android:background="@drawable/shape_radius_back_edittext"
				/>
	</RelativeLayout>

	<RelativeLayout
			android:layout_below="@id/login_block_psw"
			android:id="@+id/login_block_confirm_psw"
			android:layout_marginLeft="20dp"
			android:layout_marginRight="30dp"
			android:layout_marginTop="20dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			>

		<TextView
				android:id="@+id/login_text3"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="确认密码"
				android:layout_centerVertical="true"
				/>

		<EditText
				android:id="@+id/login_confirm_password"
				android:layout_toRightOf="@id/login_text3"
				android:layout_marginLeft="10dp"
				android:layout_width="match_parent"
				android:layout_height="40dp"
				android:hint="请再次输入密码"
				android:inputType="textPassword"
				android:textSize="12sp"
				android:background="@drawable/shape_radius_back_edittext"
				/>
	</RelativeLayout>

	<RelativeLayout
			android:layout_below="@id/login_block_confirm_psw"
			android:id="@+id/login_block_pincode"
			android:layout_marginLeft="20dp"
			android:layout_marginRight="30dp"
			android:layout_marginTop="20dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			>

		<TextView
				android:id="@+id/login_text4"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="验证码"
				android:layout_centerVertical="true"
				/>

		<EditText
				android:id="@+id/login_pincode"
				android:layout_toRightOf="@id/login_text4"
				android:layout_marginLeft="24dp"
				android:layout_width="match_parent"
				android:layout_height="40dp"
				android:hint="请输入6位验证码"
				android:textSize="12sp"
				android:background="@drawable/shape_radius_back_edittext"
				/>
	</RelativeLayout>
	<Button
			android:layout_below="@id/login_block_pincode"
			android:layout_marginTop="30dp"
			android:id="@+id/login_button_register"
			android:layout_width="200dp"
			android:layout_height="30dp"
			android:text="注册"
			android:textColor="#fff"
			android:background="@drawable/shape_radius_button_register"
			android:onClick="onClick"
	        android:layout_centerHorizontal="true"
			/>

</RelativeLayout>
