<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:f="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              android:orientation="vertical"
              tools:context="com.xiaoliapp.app.activity.ImpressDesActivity"
		>

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:paddingLeft="15dp"
			android:paddingRight="15dp"
			android:paddingTop="15dp"
			android:paddingBottom="15dp"
			android:background="#fff"
			>

		<EditText
				android:id="@+id/activity_impress_des_txt_comment"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/shape_radius_back_edittext"
				android:hint="写下你对TA的评论"
				android:padding="10dp"
				/>

		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_marginTop="20dp"
				android:gravity="center_vertical"
				>

			<CheckBox
					android:id="@+id/activity_impress_des_check_hide"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="匿名"
					android:textSize="15sp"
					/>

			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="(你的昵称将不被大家看到)"
					android:textSize="10sp"
					/>

			<Button
					android:id="@+id/activity_impress_des_button_submit"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@drawable/shape_radius_button_login"
					android:text="提交"
					android:textSize="15sp"
					android:textColor="#fff"
					/>
		</LinearLayout>
	</LinearLayout>

	<ScrollView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			>

		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				>

			<com.xiaoliapp.app.librarys.org.apmem.tools.layouts.FlowLayout
					android:id="@+id/activity_impress_des_line2_tag"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					f:layoutDirection="ltr"
					f:layout_newLine="true"
					android:paddingBottom="20dp"
					android:paddingTop="15dp"
					android:paddingLeft="10dp"
					android:paddingRight="10dp"
					>

				<TextView
						style="@style/impress_tag"
						android:text="傻逼新球"
						/>

				<ImageButton
						android:id="@+id/activity_impress_des_button_addtag"
						android:layout_width="25dp"
						android:layout_height="25dp"
						android:src="@mipmap/add"
						android:scaleType="fitXY"
						android:background="#0000"
				        android:layout_marginBottom="5dp"
						/>
			</com.xiaoliapp.app.librarys.org.apmem.tools.layouts.FlowLayout>

		</LinearLayout>
	</ScrollView>

	<EditText
			android:id="@+id/activity_impress_des_txt_tag"
			android:layout_marginTop="15dp"
			android:layout_width="match_parent"
			android:layout_height="200dp"
			android:gravity="start"
			android:background="@drawable/shape_radius_back_edittext"
			/>
</LinearLayout>
