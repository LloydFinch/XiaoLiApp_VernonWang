<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="com.xiaoliapp.app.activity.LoginActivity"
              android:orientation="vertical"
              android:id="@+id/activity_base"
		>

	<!--顶部ActionBar部分-->
	<RelativeLayout
			android:id="@+id/base_block_top"
			android:layout_width="match_parent"
			android:layout_height="40dp"
			android:background="#ff018be6"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"
			>

		<TextView
				android:id="@+id/base_top_back"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:background="@mipmap/back_arrow"
				android:layout_alignParentLeft="true"
				android:layout_centerVertical="true"
				android:onClick="onClick"
				/>

		<TextView
				android:id="@+id/base_top_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="#0000"
				android:text="登录账号"
				android:textColor="#fff"
				android:layout_toRightOf="@id/base_top_back"
				android:layout_marginLeft="120dp"
				android:layout_centerInParent="true"
				/>

		<TextView
				android:id="@+id/base_top_cancel"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="#0000"
				android:textSize="10sp"
				android:text="取消"
				android:textColor="#fff"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:onClick="onClick"
				/>
	</RelativeLayout>

	<!--内容区,需要更换的部分-->
	<RelativeLayout
			android:id="@+id/activity_base_content"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			>

	</RelativeLayout>
	<!--内容区到此结束-->

	<!--底部Tab切换部分-->
	<RadioGroup
			android:id="@+id/base_bottom_tab"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
	        android:background="#ffe8e7eb"
			>

		<RadioButton
				android:id="@+id/bottom_tab_relation"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:drawableTop="@drawable/selector_bottom_tab_relation"
				android:text="关系管理"
				android:gravity="center"
				android:button="@null"
				/>

		<RadioButton
				android:id="@+id/bottom_tab_guide"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:drawableTop="@drawable/selector_bottom_tab_guide"
				android:text="情礼攻略"
				android:gravity="center"
				android:button="@null"
				/>

		<RadioButton
				android:id="@+id/bottom_tab_discover"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:drawableTop="@drawable/selector_bottom_tab_discover"
				android:text="发现"
				android:gravity="center"
				android:button="@null"
				/>

		<RadioButton
				android:id="@+id/bottom_tab_profile"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:drawableTop="@drawable/selector_bottom_tab_profile"
				android:text="我的"
				android:gravity="center"
				android:button="@null"
				/>
	</RadioGroup>
</LinearLayout>
