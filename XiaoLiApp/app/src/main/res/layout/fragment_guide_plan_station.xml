<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.xiaoliapp.app.fragments.GuidePlanFragment"
		>

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="#ffffdde6"
			android:orientation="horizontal"
			android:paddingLeft="15dp"
			android:paddingRight="10dp"
			android:gravity="center_vertical"
			>

		<com.xiaoliapp.app.myview.MyHorScrollView
				android:id="@+id/fragment_guide_inner_scroll"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:scrollbars="none"
				>

			<android.support.design.widget.TabLayout
					android:id="@+id/fragment_guide_inner_tab_layout"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					app:tabIndicatorColor="#ff988eff"
					app:tabIndicatorHeight="3dp"
					android:background="#0000"
					/>
		</com.xiaoliapp.app.myview.MyHorScrollView>

		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text=">"
				android:textSize="20sp"
				android:textColor="#ffa41738"
				android:background="#0000"
				android:gravity="center"
				/>
	</LinearLayout>

	<android.support.v4.view.ViewPager
			android:id="@+id/fragment_guide_inner_pager"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			/>
</LinearLayout>
